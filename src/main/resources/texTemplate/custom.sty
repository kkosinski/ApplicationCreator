\ProvidesPackage{custom}
\RequirePackage{xcolor}

%personal info cover letter
\newcommand{\about}[1]{
	\hfill\begin{minipage}{0.4\textwidth}
		#1
	\end{minipage}
}

\newcommand{\receipient}[1]{
	\vspace{2.5em}\begin{minipage}{0.5\textwidth}
		#1
	\end{minipage}
}

\newcommand{\coverparagraph}[1]{
	\vspace{1.5em}
	\begin{minipage}{0.8\textwidth}
		\bodyfont#1
	\end{minipage}
}

\newcommand{\signatur}[1]{
	\vspace{3em}
	\hspace{1em}
	\coverparagraph{#1}
}

\newcommand{\coverlist}[1]{
	\thinfont#1\covernextarg
}


\newcommand{\coversender}[1]{
	\large{\bodyfont\textcolor{cyan}{#1}}
}

\newcommand{\covernextarg}{\@ifnextchar\bgroup{\covergobblenextarg}{}}
\newcommand{\covergobblenextarg}[1]{\vspace{0.1em}\newline\small#1\@ifnextchar\bgroup{\covergobblenextarg}{\newline}}

%headerbox section
\newcommand{\headerbox}[5]{
	\hspace{-#1}% has to be the same amount as the paper margin
	\colorbox{#2}{
	\begin{minipage}{\paperwidth}
	\begin{minipage}[t][][b]{0.2\textwidth}

	\end{minipage}\hfill
	\begin{minipage}[t][][b]{0.3\textwidth}
	\Large\bfseries 

	\vspace{1.5em}
	\headingfont\color{#3}{#4}

	\end{minipage}\hfill
	\begin{minipage}[t][][c]{0.3\textwidth}

	\vspace{1em}

	\includegraphics[width=70pt]{#5}
	\hspace{#1}
	\end{minipage}

	\vspace{1.5em}

\end{minipage}
}
}

%column title highlighting
\newcommand{\columntitle}[1]{
	\raggedleft\textcolor{cyan}{\bodyfont\large#1\vspace{1em}}
}

%column subtitle highlighting
\newcommand{\columnsubtitle}[1]{
	\columntitle{\bodyfont\large#1}
}

%table title highlighting
\newcommand{\tabletitle}[1]{
	\centering #1
}

%custom section highlighting
\newcommand{\customsection}[2]{
	\vspace{0.5em}
	{\headingfont\huge\textcolor{cyan}{#1}}{\headingfont\huge\textcolor{gray}{#2}}
}

\newcommand{\singleitem}[1]{
	\large{\thinfont#1}\newline
}

%list of items for skills
\newcommand{\activity}[1]{
	\Large\textbf{\bodyfont#1}\thinfont\checknextarg
}

%list of items with line break after n-th arg
\newcommand{\newlinelist}[1]{%
    \thinfont\large#1\checknextarg
}
\newcommand{\checknextarg}{\@ifnextchar\bgroup{\gobblenextarg}{}}
\newcommand{\gobblenextarg}[1]{\vspace{0.4em}\newline\large#1\@ifnextchar\bgroup{\gobblenextarg}{\newline}}

%comma separated list
\newcommand{\commaseparatedlist}[1]{%
    \thinfont\large#1\nextargprojects
}
\newcommand{\nextargprojects}{\@ifnextchar\bgroup{\getnextarg}{}}
\newcommand{\getnextarg}[1]{, #1\@ifnextchar\bgroup{\getnextarg}{\newline}}